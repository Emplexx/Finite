<?xml version="1.0" encoding="utf-8"?>
<resources
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<style name="Widget.Finite.AppBarLayout.Background" parent="Widget.Material3.AppBarLayout">
		<item name="materialThemeOverlay">@style/ThemeOverlay.Finite.AppBarLayout.OnBackground</item>
	</style>

	<style name="ThemeOverlay.Finite.AppBarLayout.OnBackground" parent="">
		<item name="colorSurface">?attr/background</item>
		<item name="colorOnSurface">?attr/colorOnBackground</item>
	</style>


	<style name="ThemeOverlay.Finite.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">

		<item name="android:windowAnimationStyle">@style/Animation.Finite.BottomSheetDialog</item>
		<!--<item name="android:navigationBarColor">@android:color/transparent</item>-->
		<item name="bottomSheetStyle">@style/ModalBottomSheet</item>>

	</style>

	<style name="Animation.Finite.BottomSheetDialog" parent="Animation.Material3.BottomSheetDialog">
		<item name="android:windowEnterAnimation">@anim/sheet_slide_up</item>
		<item name="android:windowExitAnimation">@anim/sheet_slide_down</item>
	</style>

	<style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
		<item name="paddingBottomSystemWindowInsets">false</item>

		<!--<item name="elevationOverlayEnabled">false</item>-->

		<item name="backgroundTint">?attr/colorSheetBackground</item>

		<!--<item name="paddingTopSystemWindowInsets">false</item>-->
		<!--<item name="forceApplySystemWindowInsetTop">false</item>
		<item name="marginTopSystemWindowInsets">false</item>-->

		<item name="shapeAppearance">?attr/shapeAppearanceCornerMedium</item>
	</style>

	<style name="Widget.Finite.CardView.Untoned" parent="Widget.Material3.CardView.Outlined">

		<item name="strokeColor">@android:color/transparent</item>
		<item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Small</item>
		<item name="cardPreventCornerOverlap">false</item>
		<item name="materialThemeOverlay">@style/ThemeOverlay.Finite.Card.Untoned</item>
	</style>
	<style name="ThemeOverlay.Finite.Card.Untoned" parent="">
		<item name="elevationOverlayEnabled">false</item>
	</style>

	<style name="Widget.Finite.MaterialDivider" parent="Widget.Material3.MaterialDivider">
		<item name="materialThemeOverlay">@style/ThemeOverlay.Finite.MaterialDivider</item>
	</style>
	<style name="ThemeOverlay.Finite.MaterialDivider" parent="">
		<item name="colorOutline">?attr/colorDivider</item>
		<item name="colorOutlineVariant">?attr/colorDivider</item>
	</style>


	<style name="Widget.Finite.Chip.Filter" parent="Widget.Material3.Chip.Filter">

		<item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
		<item name="materialThemeOverlay">@style/ThemeOverlay.Finite.Card.Untoned</item>

		<item name="chipStartPadding"> 8dp </item>

		<item name="iconStartPadding"> 0dp </item>
		<item name="iconEndPadding"> 4dp </item>

		<item name="textStartPadding"> 4dp </item>
		<item name="textEndPadding"> 4dp </item>

		<item name="closeIconStartPadding"> 4dp </item>
		<item name="closeIconEndPadding">0dp</item>

		<item name="chipEndPadding">8dp</item>

		<item name="checkedIcon">@drawable/ic_check_24</item>
		<item name="checkedIconSize">18dp</item>
		<item name="checkedIconTint">?attr/colorPrimary</item>

		<item name="android:requiresFadingEdge">horizontal</item>
		<item name="android:fadingEdge">horizontal</item>
		<item name="android:fadingEdgeLength">16dp</item>

	</style>

</resources>